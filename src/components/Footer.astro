---
import { Icon } from "astro-icon/components";

const today = new Date();
---

<footer
  class="footer footer-horizontal md:footer-vertical footer-center bg-base-100 text-base-content border-base-300 mt-10 border-t p-10"
>
  <aside>
    <p class="font-sono font-bold">Marknotes by Wyndham</p>
    <p class="font-sono">&copy; {today.getFullYear()} - All rights reserved</p>
  </aside>
  <nav>
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href="https://twitter.com/muhwyndham"
        aria-label="Twitter"
        class="hover:text-primary transition-colors"
      >
        <Icon name="simple-icons:x" class="h-6 w-6 fill-current" />
      </a>
      <a
        href="https://www.youtube.com/channel/UCPmxWqF9kzhe-VrOylqH2AA"
        aria-label="YouTube"
        class="hover:text-primary transition-colors"
      >
        <Icon name="simple-icons:youtube" class="h-6 w-6 fill-current" />
      </a>
      <a
        href="https://github.com/wyndhamharyata"
        aria-label="GitHub"
        class="hover:text-primary transition-colors"
      >
        <Icon name="simple-icons:github" class="h-6 w-6 fill-current" />
      </a>
      <a
        href="https://mwyndham.medium.com"
        aria-label="Medium"
        class="hover:text-primary transition-colors"
      >
        <Icon name="simple-icons:medium" class="h-6 w-6 fill-current" />
      </a>
      <a
        href="https://www.linkedin.com/in/mwyndham"
        aria-label="LinkedIn"
        class="hover:text-primary transition-colors"
      >
        <Icon name="simple-icons:linkedin" class="h-6 w-6 fill-current" />
      </a>
      <a href="/rss.xml" aria-label="RSS Feed" class="hover:text-primary transition-colors">
        <Icon name="heroicons:rss" class="h-6 w-6 fill-current" />
      </a>
    </div>
  </nav>
</footer>
