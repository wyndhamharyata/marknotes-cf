---
import { minidenticon } from "minidenticons";

interface Props {
  seed: string;
  size?: number;
  saturation?: number;
  lightness?: number;
}

const { seed, size = 48, saturation = 50, lightness = 50 } = Astro.props;

// Generate SVG content
const svgContent = minidenticon(seed, saturation, lightness);
const dataUri = `data:image/svg+xml;utf8,${encodeURIComponent(svgContent)}`;
---

<div class="avatar">
  <div class="mask mask-squircle bg-base-200" style={`width: ${size}px; height: ${size}px;`}>
    <img src={dataUri} alt={`Avatar for ${seed}`} width={size} height={size} />
  </div>
</div>
