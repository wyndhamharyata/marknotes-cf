---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  caption?: string;
  loading?: "lazy" | "eager" | null | undefined;
}

const { src, alt, width = 800, height = 600, caption, loading = "lazy" } = Astro.props;
---

<figure class="my-6">
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    class="mx-auto rounded-lg shadow-md"
    loading={loading}
  />
  {
    caption && (
      <figcaption class="text-base-content/70 mt-2 text-center text-sm italic">
        {caption}
      </figcaption>
    )
  }
</figure>
