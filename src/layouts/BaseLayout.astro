---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="font-sono flex min-h-screen flex-col" hx-boost="true" hx-ext="head-support">
    {/* Background layer */}
    <div class="bg-base-200 dark:bg-base-300 fixed inset-0 -z-10">
      <div class="grid-bg absolute inset-0"></div>
      <div class="from-secondary/5 via-accent/5 absolute inset-0 bg-linear-to-bl to-transparent">
      </div>
    </div>

    <Header />
    <main id="main-content" class="mx-auto max-w-4xl flex-1 py-8">
      <slot />
    </main>
    <Footer />

    {/* Loading indicator */}
    <div id="htmx-indicator" class="htmx-indicator fixed top-0 right-0 left-0 z-50 h-1">
      <div class="bg-primary h-full"></div>
    </div>
  </body>
</html>
